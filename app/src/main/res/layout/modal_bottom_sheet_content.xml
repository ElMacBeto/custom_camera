            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="nuevo2 "
                android:background="@drawable/bg_btn"
                android:padding="10sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="nuevo3 "
                android:background="@drawable/bg_btn"
                android:padding="10sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="nuevo4 "
                android:background="@drawable/bg_btn"
